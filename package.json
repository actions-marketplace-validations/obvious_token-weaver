{
  "devDependencies": {
    "@types/node": "^14.11.2",
    "gts": "^3.1.1",
    "style-dictionary": "^3.7.2",
    "token-transformer": "^0.0.30",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "transform-tokens": "token-transformer tokens/tokens.json tokens/sd_tokens.json --resolveReferences=false",
    "build": "npm run compile && npm run transform-tokens && style-dictionary build --config ./dist/src/index.js"
  }
}
